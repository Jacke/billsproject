.form.clearfix
  = form_for @site do |f|
    - if @site.errors.any?
      #error_explanation
        %h2= "#{pluralize(@site.errors.count, "error")} prohibited this site from being saved:"
        %ul
          - @site.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :direction
      = f.text_area :direction
    .actions.span4
      = f.submit 'Save', class: 'btn btn-large btn-block btn-success clearfix'
