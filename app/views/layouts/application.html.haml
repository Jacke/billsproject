!!!
%html
  %head
    %title Billsproject
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %p.notice= notice
    %p.alert= alert
    #container
      #user_nav
        - if employee_signed_in?
          Logged in as
          = succeed "." do
            %strong= current_employee.email
          = link_to 'Edit profile', edit_employee_registration_path
          = link_to "Logout", destroy_employee_session_path, method: :delete
        - else
          = link_to "Sign up", new_employee_registration_path
          = link_to "Login", new_employee_session_path

    = yield

