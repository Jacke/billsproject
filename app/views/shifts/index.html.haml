%h1= "Точка #{@site.name}"
%div
  %ul.unstyled
    %li= "Статус #{aval?(@status)} к приему"
    - unless current_employee.admin?
      %li
        = link_to "Смена", new_shift_path(site: @site.id)
    - if current_employee.admin?
      %li
        = link_to "Выставить баланс", balance_shifts_path(site: @site.id)
- if @shifts
  %table.table
    %tr
      %th Точка
      %th Сотрудник
      %th Баланс старт
      %th Старая Касса
      %th Баланс
      %th Касса
      %th Комментарий
      - @shifts.shift_row_assigns.each do |as|
        %th= as.shift_row.title if as.shift_row.present?
      %th Принято
      %th= "Закрыто" unless @shifts.created_at == @shifts.updated_at
      / / %th
    - if @shifts
      %tr
        %td= @shifts.site.name
        %td= @shifts.employee.name
        - if @shifts.hoar_row.present?
          %td= @shifts.hoar_row.balance
          %td= @shifts.hoar_row.till
        %td= @shifts.balance
        %td= @shifts.till
        %td= @shifts.comment
        - @shifts.shift_row_assigns.each do |as|
          %td= as.def

        %td= @shifts.created_at
        %td= @shifts.updated_at unless @shifts.created_at == @shifts.updated_at
        / / %td= link_to 'Destroy', @shifts, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br
= Shift.current_site
